{
  "name": "bozdoz.com",
  "version": "2.0.0",
  "private": true,
  "description": "The portfolio of Benjamin J DeLong",
  "repository": {
    "url": "https://github.com/bozdoz/bozdoz.com/"
  },
  "scripts": {
    "start": "npm run clean && NODE_ENV=development npm run start:ts",
    "start:ts": "ts-node ./src/dev-server.tsx",
    "build": "./bin/deploy.sh",
    "clean": "rm -f ./src/server.min.js && rm -f ./public/js/main.js",
    "test": "npm run lint && jest",
    "lint": "tslint --project tsconfig.json"
  },
  "license": "MIT",
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "raf/polyfill"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "^.+\\.jsx?$": "ts-jest"
    },
    "testRegex": "./.*test\\.(ts|tsx|js)$",
    "setupTestFrameworkScriptFile": "<rootDir>setupTests.ts"
  },
  "dependencies": {
    "axios": "0.19.0",
    "express": "4.16.3",
    "front-matter": "2.3.0",
    "marked": "0.3.19",
    "react": "16.3.2",
    "react-dom": "16.3.2",
    "react-router-dom": "4.2.2"
  },
  "devDependencies": {
    "@types/axios": "0.14.0",
    "@types/enzyme": "3.1.11",
    "@types/enzyme-adapter-react-16": "1.0.2",
    "@types/express": "4.16.0",
    "@types/jest": "23.1.1",
    "@types/marked": "0.4.0",
    "@types/mini-css-extract-plugin": "0.2.0",
    "@types/node": "10.3.5",
    "@types/react": "16.4.1",
    "@types/react-dom": "16.0.6",
    "@types/react-router": "4.0.27",
    "@types/react-router-dom": "4.2.7",
    "@types/webpack": "4.4.2",
    "@types/webpack-dev-middleware": "2.0.1",
    "@types/webpack-env": "1.13.6",
    "@types/webpack-hot-middleware": "2.16.3",
    "@types/webpack-node-externals": "1.7.0",
    "autoprefixer": "7.2.6",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-jest": "21.2.0",
    "babel-loader": "7.1.4",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "css-loader": "0.28.11",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "jest": "21.2.1",
    "mini-css-extract-plugin": "0.4.0",
    "node-sass": "4.12.0",
    "open": "^7.0.3",
    "postcss-loader": "2.1.5",
    "prettier": "1.13.5",
    "raf": "3.4.0",
    "react-test-renderer": "16.3.2",
    "sass-loader": "7.1.0",
    "style-loader": "0.18.2",
    "ts-jest": "22.4.6",
    "ts-loader": "4.4.1",
    "ts-node": "7.0.0",
    "tslint": "^6.1.0",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3",
    "webpack": "4.35.2",
    "webpack-cli": "3.3.8",
    "webpack-node-externals": "1.7.2"
  },
  "optionalDependencies": {
    "webpack-dev-middleware": "1.12.2",
    "webpack-dev-server": "2.11.5",
    "webpack-hot-middleware": "2.25.0"
  }
}
